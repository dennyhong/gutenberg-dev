{
	"name": "firsttheme-blocks",
	"version": "1.0.0",
	"description": "Custom gutenberg block development",
	"main": "src/index.js",
	"scripts": {
		"lint": "eslint src",
		"start": "webpack --mode=development --watch",
		"build": "npm run lint && webpack --mode=production && gulp bundle",
		"checkFormat": "prettier --check \"**/*.{js,json,css,scss}\"",
		"format": "prettier --write \"**/*.{js,json,css,scss}\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": "eslint",
		"**/*.{js,json,css,scss}": [
			"prettier --write",
			"git add"
		]
	},
	"keywords": [],
	"author": "Denny Hong <hong961127@gmail.com>",
	"license": "ISC",
	"dependencies": {
		"@wordpress/blocks": "^6.25.0",
		"@wordpress/i18n": "^3.17.0",
		"jquery": "^3.5.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-react": "^7.12.10",
		"@wordpress/browserslist-config": "^2.7.0",
		"babel-loader": "^8.2.2",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^5.0.1",
		"css-minimizer-webpack-plugin": "^1.1.5",
		"eslint": "^7.16.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-loader": "^4.0.2",
		"eslint-plugin-react": "^7.21.5",
		"gulp": "^4.0.2",
		"gulp-zip": "^5.0.2",
		"husky": "^4.3.6",
		"lint-staged": "^10.5.3",
		"mini-css-extract-plugin": "^1.3.3",
		"postcss": "^8.2.1",
		"postcss-loader": "^4.1.0",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.2.1",
		"sass": "^1.30.0",
		"sass-loader": "^10.1.0",
		"style-loader": "^2.0.0",
		"webpack": "^5.11.0",
		"webpack-cli": "^4.2.0"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
